{
  "name": "salesforce-cicd-pipeline-package",
  "type": "commonjs",
  "private": true,
  "version": "1.1.0",
  "description": "salesforce-cicd-pipeline-package",
  "scripts": {
    "formatting": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "formatting:fix": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "generate:docs": "rm -Rf docs/generated-docs && apexdocs markdown ",
    "lint": "eslint **/{aura,lwc}/**/*.js",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "flow:scanner": "sf plugins install @salesforce/sfdx-scanner@latest && sf flow:scan -d force-app/main/default/flows --failon warning"
  },
  "devDependencies": {
    "@cparra/apexdocs": "^3.9.0",
    "@lwc/eslint-plugin-lwc": "^1.9.0",
    "@prettier/plugin-xml": "^3.2.2",
    "@salesforce/eslint-config-lwc": "^3.2.3",
    "@salesforce/eslint-plugin-aura": "^2.0.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^6.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.5.0",
    "prettier-plugin-apex": "^2.2.4"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/{aura,lwc}/**/*.js": [
      "eslint"
    ]
  },
  "volta": {
    "node": "20.18.1"
  }
}
